<!DOCTYPE doc-id [
  <!ELEMENT doc-id (id-elem+, idref-elem, idrefs-elem)>
  <!ELEMENT id-elem (#PCDATA)>
  <!ELEMENT idref-elem (#PCDATA)>
  <!ELEMENT idrefs-elem (#PCDATA)>
  <!ATTLIST id-elem id ID #REQUIRED>
